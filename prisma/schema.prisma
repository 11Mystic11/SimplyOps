// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  accounts      Account[]
  sessions      Session[]
  clients       Client[]
  tasks         Task[]    @relation("TaskCreator")
  notes         Note[]
  quotes        Quote[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Client {
  id               String   @id @default(cuid())
  name             String
  email            String?
  phone            String?
  website          String?
  industry         String?
  status           String   @default("active")
  healthScore      Int      @default(80)
  stripeCustomerId String?
  billingEmail     String?
  billingMode      String   @default("monthly_invoice") // monthly_invoice, subscription
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  createdById      String

  createdBy      User             @relation(fields: [createdById], references: [id])
  contacts       Contact[]
  projects       Project[]
  tasks          Task[]
  notes          Note[]
  scans          AutomationScan[]
  invoices       Invoice[]
  subscriptions  Subscription[]
  expenses       Expense[]
  quotes         Quote[]
  invoiceMirrors InvoiceMirror[]

  @@index([status])
  @@index([healthScore])
}

model AutomationScan {
  id        String   @id @default(cuid())
  clientId  String
  results   String   // JSON array of automation opportunities
  createdAt DateTime @default(now())

  client Client @relation(fields: [clientId], references: [id], onDelete: Cascade)

  @@index([clientId])
}

model Contact {
  id        String  @id @default(cuid())
  clientId  String
  name      String
  email     String?
  phone     String?
  role      String?
  isPrimary Boolean @default(false)

  client Client @relation(fields: [clientId], references: [id], onDelete: Cascade)
}

model Project {
  id              String    @id @default(cuid())
  name            String
  description     String?
  type            String    // "Website Build", "Automation Build", "Custom"
  status          String    @default("planning")
  budget          Float?
  startDate       DateTime?
  endDate         DateTime?
  dueDate         DateTime?
  billingStatus   String    @default("unbilled") // unbilled, billed
  billedInvoiceId String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  clientId        String

  client   Client    @relation(fields: [clientId], references: [id], onDelete: Cascade)
  tasks    Task[]
  notes    Note[]
  expenses Expense[]

  @@index([status])
  @@index([clientId])
  @@index([dueDate])
  @@index([billingStatus])
}

model Task {
  id          String    @id @default(cuid())
  title       String
  description String?
  status      String    @default("todo")
  priority    String    @default("medium")
  dueDate     DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  projectId   String?
  clientId    String?
  createdById String

  project Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)
  client  Client?  @relation(fields: [clientId], references: [id], onDelete: Cascade)
  creator User    @relation("TaskCreator", fields: [createdById], references: [id])
  notes   Note[]

  @@index([status])
  @@index([dueDate])
}

model Note {
  id        String    @id @default(cuid())
  content   String
  type      String    // "call", "email", "meeting", "general"
  clientId  String?
  projectId String?
  taskId    String?
  createdById String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  client  Client?  @relation(fields: [clientId], references: [id], onDelete: Cascade)
  project Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)
  task    Task?    @relation(fields: [taskId], references: [id], onDelete: Cascade)
  creator User     @relation(fields: [createdById], references: [id])

  @@index([type])
  @@index([createdAt])
  @@index([clientId])
}

model Invoice {
  id            String    @id @default(cuid())
  invoiceNumber String    @unique
  clientId      String
  amount        Float
  status        String    @default("draft") // draft, sent, paid, overdue, cancelled
  dueDate       DateTime?
  paidDate      DateTime?
  issuedDate    DateTime  @default(now())
  description   String?
  lineItems     String    // JSON array of line items
  notes         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  client       Client        @relation(fields: [clientId], references: [id], onDelete: Cascade)
  transactions Transaction[]

  @@index([clientId])
  @@index([status])
  @@index([dueDate])
}

model Subscription {
  id                   String    @id @default(cuid())
  clientId             String
  name                 String
  description          String?
  amount               Float
  billingCadence       String    @default("monthly") // monthly, quarterly, annual
  status               String    @default("active") // active, paused, cancelled
  startDate            DateTime  @default(now())
  nextBilling          DateTime
  endDate              DateTime?
  stripeSubscriptionId String?   @unique
  stripeCustomerId     String?
  planId               String? // "foundation", "momentum", "command"
  planTier             String? // "Standard", "Advanced", "Enterprise" (Command only)
  addons               String? // JSON: [{ id, tier }]
  setupPaid            Boolean   @default(false)
  contactName          String?
  contactEmail         String?
  contactPhone         String?
  businessName         String?
  industry             String?
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt

  client       Client        @relation(fields: [clientId], references: [id], onDelete: Cascade)
  transactions Transaction[]

  @@index([clientId])
  @@index([status])
  @@index([nextBilling])
  @@index([stripeSubscriptionId])
}

model Expense {
  id                String    @id @default(cuid())
  category          String
  amount            Float
  description       String
  date              DateTime  @default(now())
  receiptUrl        String?
  vendor            String?
  whoPaid           String    @default("you_paid") // you_paid, client_paid, included_in_retainer
  passThroughPolicy String    @default("pass_through_at_cost") // pass_through_at_cost, markup_percent, flat_fee
  markupPercent     Float     @default(0)
  billingStatus     String    @default("unbilled") // unbilled, billed
  billedInvoiceId   String?
  projectId         String?
  clientId          String?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  project      Project?      @relation(fields: [projectId], references: [id], onDelete: Cascade)
  client       Client?       @relation(fields: [clientId], references: [id], onDelete: Cascade)
  transactions Transaction[]

  @@index([category])
  @@index([date])
  @@index([clientId])
  @@index([billingStatus])
}

model Prospect {
  id               String    @id @default(cuid())
  firstName        String
  lastName         String?
  email            String?
  linkedinUrl      String?
  jobTitle         String?
  company          String?
  industry         String?
  companySize      String?
  persona          String?   // owner_operator, ops_manager, sales_revops, admin_manager
  phone            String?
  personalizedLine String?
  source           String?   @default("csv_import") // csv_import, clay, manual
  status           String    @default("new")        // new, contacted, replied, booked, converted, unresponsive
  outreachChannel  String?   // email, linkedin, both
  campaignId       String?
  notes            String?
  importBatch      String?   // groups rows from same CSV upload
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  @@index([status])
  @@index([persona])
  @@index([importBatch])
  @@index([email])
}

model Transaction {
  id             String   @id @default(cuid())
  type           String   // invoice_payment, subscription_payment, expense
  amount         Float
  date           DateTime @default(now())
  status         String   @default("completed") // completed, pending, failed
  description    String?
  invoiceId      String?
  subscriptionId String?
  expenseId      String?
  createdAt      DateTime @default(now())

  invoice      Invoice?      @relation(fields: [invoiceId], references: [id])
  subscription Subscription? @relation(fields: [subscriptionId], references: [id])
  expense      Expense?      @relation(fields: [expenseId], references: [id])

  @@index([type])
  @@index([date])
  @@index([status])
}

model Quote {
  id                 String    @id @default(cuid())
  clientId           String
  createdById        String
  status             String    @default("proposed") // proposed, locked, invoiced, cancelled
  lines              String    // JSON array of QuoteLine objects
  subtotal           Float     @default(0)
  discount           Float     @default(0)
  total              Float     @default(0)
  currency           String    @default("usd")
  dueDate            DateTime?
  netTermsDays       Int?
  clientMemo         String?
  internalMemo       String?
  billableProjectIds String?   // JSON array of project IDs
  billableExpenseIds String?   // JSON array of expense IDs
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  client        Client         @relation(fields: [clientId], references: [id], onDelete: Cascade)
  createdBy     User           @relation(fields: [createdById], references: [id])
  invoiceMirror InvoiceMirror?

  @@index([clientId])
  @@index([status])
  @@index([createdAt])
}

model InvoiceMirror {
  id               String    @id @default(cuid())
  clientId         String
  quoteId          String    @unique
  stripeInvoiceId  String    @unique
  stripeCustomerId String
  status           String    @default("draft") // draft, open, paid, void, uncollectible
  subtotal         Float
  total            Float
  hostedInvoiceUrl String?
  finalizedAt      DateTime?
  emailSentAt      DateTime?
  emailRecipient   String?
  idempotencyKey   String    @unique
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  client Client @relation(fields: [clientId], references: [id], onDelete: Cascade)
  quote  Quote  @relation(fields: [quoteId], references: [id])

  @@index([clientId])
  @@index([status])
  @@index([stripeInvoiceId])
}
